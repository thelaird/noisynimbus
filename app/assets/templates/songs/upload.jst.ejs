<div class='row'>
  <div class='center span9'>
    <div class='col-xs-3 col-xs-offset-4'>
        <form class='song-form'>
          <div class='form-group'>
            <label for='form-artist'>Artist:</label>
            <input type='text' name='artist' id='form-artist' class='form-control'><br>
          </div>
          <div class='form-group'>
            <label for='form-title'>Title:</label>
            <input type='text' name='title' id='form-title' class='form-control'><br>
          </div>
          <div class='form-group'>
            <label for='files'>Song:</label>
            <input type='file' name='files[]' id='song' class='form-control'><br>
          </div>
          <div class='form-group'>
            <label for='description'>Description:</label>
            <textarea name='description' class='form-control'></textarea><br>
          </div>
            <button class='btn btn-primary upload'>Upload</button>
            <div class="progress inactive">
              <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
              </div>
            </div>
        </form>
    </div>
  </div>
</div>
